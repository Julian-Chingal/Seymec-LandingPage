---
interface Props {
  title: string;
  data?: {
    title: string;
    description: string;
  }[];
  img?: string;
}

const { title, data } = Astro.props;
---

<div class="container px-6 py-10 mx-auto">
  <h1
    class="text-2xl font-semibold text-gray-800 capitalize lg:text-3xl dark:text-white"
  >
    {title}
  </h1>
  <div class="mt-2">
    <span class="inline-block w-40 h-1 bg-[#1174B8] rounded-full"></span>
    <span class="inline-block w-3 h-1 ml-1 bg-[#1174B8] rounded-full"></span>
    <span class="inline-block w-1 h-1 ml-1 bg-[#1174B8] rounded-full"></span>
  </div>

  <div
    class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-12 md:grid-cols-2 xl:grid-cols-3"
  >
    {
      data?.map((d) => (
        <div class="p-8 space-y-3 border-2 border-[#1174B8]  rounded-xl">
          <span class="inline-block text-[#1174B8]">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-8 h-8"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"
              />
            </svg>
          </span>

          <h1 class="text-xl font-semibold text-gray-700 capitalize">
            {d.title}
          </h1>

          <p class="text-gray-500 dark:text-gray-300">{d.description}</p>
        </div>
      ))
    }
  </div>
</div>

---
import Sections from "./sections.astro";


const services = [
  {
    href: "/servicios/electronica",
    title: "Ingeniería Electrónica e Instrumentación",
    description: "Explora nuestros servicios de ingeniería electrónica, instrumentación industrial, y más."
  },
  {
    href: "/servicios/infraestructura-electrica",
    title: "Infraestructura Eléctrica y Energética",
    description: "Servicios de subestaciones eléctricas, redes de alta y baja tensión, generadores eléctricos, y más."
  },
  {
    href: "/servicios/infraestructura",
    title: "Construcción y Estructuras",
    description: "Proyectos de estructuras metálicas, obras civiles, y servicios de soldadura."
  },
  {
    href: "/servicios/electromecanica",
    title: "Ingeniería Electromecánica y Mantenimiento",
    description: "Ofrecemos servicios electromecánicos industriales y outsourcing especializado."
  }
];
---

<Sections title="Nuestros Servicios">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        {services.map((service) => (
          <a href={service.href} class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-2">{service.title}</h2>
            <p class="text-gray-600 dark:text-gray-300">{service.description}</p>
          </a>
        ))}
      </div>
</Sections>
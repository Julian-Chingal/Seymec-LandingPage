---
import Banner from "@/components/landing/Banner.astro";
import Content from "@/components/landing/Content.astro";
import { services } from "@/data/servicesData";

const data = services.find(
  (service) => service.title === "Construcción y Obras Civiles"
);

const content = [
  {
    title: "Obras civiles",
    description:
      "Construcción de obras civiles, como edificaciones, naves industriales, puentes, carreteras, entre otros.",
  },
 
];
---

<Banner title={data?.title} img={data?.img}>
  <Content title={data?.description || "Default Description"} data={content} />
</Banner>
